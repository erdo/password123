<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomCardLayout">
        <item name="android:background">@color/colorPW123GreyDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/common_space_medium</item>
        <item name="android:layout_marginEnd">@dimen/common_space_medium</item>
        <item name="android:layout_marginStart">@dimen/common_space_medium</item>
    </style>

</resources>
