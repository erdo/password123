<resources>

    <!-- Base application theme. No action bar because we are using
    support:appcompat-v7 and AppCompatActivity (add a Toolbar in layout if we need one) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomCardLayout">
        <item name="android:background">@color/colorPW123GreyDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/cmn_space_medium</item>
        <item name="android:layout_marginEnd">@dimen/cmn_space_medium</item>
        <item name="android:layout_marginStart">@dimen/cmn_space_medium</item>
    </style>

</resources>
